#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# MySQL
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

function downloadMySQL {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	installMySQL $URL;
}

function installMySQL {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	uninstallMySQL $URL;
	configureMySQL $URL;
}

function configureMySQL {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
}

function backupMySQL {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	local bkpDir="$BKP/MongoDB";
}

function uninstallMySQL {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	backupMySQL $URL;
}

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# MongoDB
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

function downloadMongoDB {
	local URL="$1";
	local host=$(dirname "$URL");
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	local name="mongodb";
	curl -O $URL | log "[Downloading $name ${INFO} $file.$extension ${NC} from ${INFO} $host ${NC}...]:";
	(
		set -e;
		tar -zxvf "$PWD/$file.$extension";
		mkdir -p "$PWD/$name";
		if cp -R -n "$PWD/$file/" "$PWD/$name"; then
			success "${SUCCESS} Done! ${NC}";
			{ installMongoDB $URL; }||{ :; }
		else
			error "COPY_ERROR" "${INFO} $PWD/$name ${NC} already exists\n------------- Remove this folder and try again to continue!";
		fi
	)
	[ $? -eq 0 ] ||
	(
		local ERROR=$?;
		error "ERROR" "Download ${INFO} $file.$extension ${NC} has been failed.";
		exit $ERROR;
	)
	{
		local ERROR=$?;
		[ -f "$PWD/$file.$extension" ] && rm "$PWD/$file.$extension";
		[ -d "$PWD/$file" ] && rm -rf "$PWD/$file" "$PWD/$name";
		exit $ERROR;
	}
}

function installMongoDB {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	local name="mongodb";
	local installDir="$HOME/bin";
	uninstallMongoDB $URL;
	(
		set -e;
		log "\n[Installing $file.$extension]:";
		if mv "$PWD/$name" "$installDir"; then
			log "✓ $name has been successfully installed on ${INFO} $installDir/$name ${NC}";
			success "${SUCCESS} Done! ${NC}";
			{ configureMongoDB $URL; }||{ :; }
		else
			warn "${WARN} $name ${NC} has been installed in same address before.\nCheckout: ${INFO} $installDir/$name ${NC}";
		fi
	)
	[ $? -eq 0 ] ||
	(
		local ERROR=$?;
		error "ERROR" "The ${INFO} $file.$extension ${NC} installation failed.";
		exit $ERROR;
	)
}

function configureMongoDB {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	local name="mongodb";
	local dataDir="/data/db";
	(	
		set -e;
		log "\n[Configuring $file.$extension]:";
		if mkdir "$dataDir" 2> /dev/null; then
			log "✓ $name has been successfully configured on ${INFO} $dataDir ${NC}";
			success "${SUCCESS} Done! ${NC}";
		else
			warn "${WARN} $name ${NC} ${INFO} $dataDir ${NC} directory already exists";
		fi
	)
	[ $? -eq 0 ] ||
	(
		local ERROR=$?;
		error "CONFIGURATION_ERROR" "The ${INFO} $file.$extension ${NC} configuration failed.";
		exit $ERROR;
	)
}

function backupMongoDB {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	local name="mongodb";
	local bkpDir="$BKP/MongoDB";
	(
		set -e;
		log "\n[Backuping $file.$extension]:";
		if mkdir -p "$bkpDir/installers" "$bkpDir/backup" "$bkpDir/raw"; then
			if cp -R -n "$PWD/$name" "$bkpDir/installers"; then
				open "$bkpDir/installers";
				mv "$file.$extension" "$BKP/installers";
				rm "$file.$extension";
			fi
			# /usr/local/Cellar
			# /usr/local/bin
			# /data/db
			# $HOME/bin
		fi
	)
	[ $? -eq 0 ] ||
	(
		local ERROR=$?;
		error "BACKUP_ERROR" "Backup from ${INFO} $file.$extension ${NC} has been failed.";
		exit $ERROR;
	)
}

function uninstallMongoDB {
	local URL="$1";
	local extension=$(basename ${URL##*.});
	local file=$(basename ${URL%.*});
	local dataDir="/data/db";
	local whichDir=$(dirname "$(which mongo)");
	backupMongoDB $URL;
	(
		set -e;
		log "\n[Uninstalling $file.$extension]:";
		find "/usr/local" -name mongo* -or -name bsondump -delete;
		find "$HOME/bin" -name mongo* -or -name bsondump -delete;
		rm -rf "$dataDir";

	)
	[ $? -eq 0 ] ||
	(
		local ERROR=$?;
		error "CLEANUP_ERROR" "${INFO} $file.$extension ${NC} cleanup has been failed.";
		exit $ERROR;
	)
}


